<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceGame.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                x:Name="diceResultImg"
                Source="d1im.png"
                SemanticProperties.Description=""
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Dice Rolling Game"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                x:Name = "rollCounter"
                Text="Welcome! Press roll or shake your device to play"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome! Press roll or shake your device to play"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="RollBtn"
                Text="Roll"
                SemanticProperties.Hint="Rolls a four sided die"
                Clicked="RollDice"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
